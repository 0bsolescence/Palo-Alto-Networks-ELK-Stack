{ 
    "template" : "traffic", 
    "settings" : { "index.refresh_interval" : "5s" }, 
    "mappings" : { 
        "_default_" : { 
            "_all" : { "enabled" : false }, 
            "dynamic_templates" : [{ 
              "message_field" : { 
                "match" : "message", 
                "match_mapping_type" : "string", 
                "mapping" : { "type" : "string", "index" : "not_analyzed" } 
              } 
            }, { 
              "string_fields" : { 
                "match" : "*", 
                "match_mapping_type" : "string", 
                "mapping" : { "type" : "string", "index" : "not_analyzed" } 
              } 
            }], 
      	"properties" : {
            "@version": { "type": "string", "index": "not_analyzed" },
            "geoip"  : { "type" : "object", "dynamic": true, "properties" : { "location" : { "type" : "geo_point" } } },
            "SourceIPGeo"  : { "type" : "object", "dynamic": true, "properties" : { "location" : { "type" : "geo_point" } } },
            "DestinationIPGeo"  : { "type" : "object", "dynamic": true, "properties" : { "location" : { "type" : "geo_point" } } 
            } 
        } 
    } 
  }
}
